<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:orientation="vertical">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:layout_height="80dp"
                 android:layout_gravity="center_horizontal"
                 android:orientation="vertical">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/refresh_bottom_shadow"/>

        <ImageView
            android:id="@+id/iv_rongyi"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/refresh_box"/>

        <com.mundane.androidtechniqueapply.view.widget.Bezier
            android:id="@+id/bezier_line"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal|bottom"/>

    </FrameLayout>
    <ImageView
        android:id="@+id/iv_trans"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/refresh_slogan"
        android:translationY="20dp"/>
</LinearLayout>