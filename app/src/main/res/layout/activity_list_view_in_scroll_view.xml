<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list_view_in_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mundane.androidtechniqueapply.ui.activities.ListViewInScrollViewActivity">
    <com.mundane.androidtechniqueapply.view.widgets.MyScrollView
        android:id="@+id/my_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="60sp"
                android:text="AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ListView
                android:id="@+id/lv"
                android:layout_width="match_parent"
                android:layout_height="320dp">

            </ListView>
            <TextView
                android:textSize="60sp"
                android:text="BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="60sp"
                android:text="CCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCCC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </com.mundane.androidtechniqueapply.view.widgets.MyScrollView>

</RelativeLayout>
